{{> menuadmin}}

      <div class="jumbotron">
        <h2>Zelaia editatu</h2>
      </div>

<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/zelaiakaldatu/{{idzelaia}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
       
        <div class="form-group">
            <label for="zelaiizena" class="col-sm-2 control-label">Zelaiaren izena</label>
            <div class="col-sm-4">
                <textarea name="zelaiizena" rows="1" cols="40" class="form-control">{{zelaiizena}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="zelaizki" class="col-sm-2 control-label">Zenbagarren zelaia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" id="zelaizki" name="zelaizki" value={{zelaizki}}>
            </div>
        </div>        
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Gorde</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>