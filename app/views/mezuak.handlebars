{{> menuadmin}}

<div class="jumbotron">
        <h2>Mezuak</h2>
      </div>

<div class="col-lg-2 col-md-offset-1">
<label for="mezuak" > - ADI mezuak</label>
</div>
<div class="col-lg-7">
<form class="form-horizontal" role="form" action="/admin/mezuakbidali" method="POST">
        
        <select id="mezumota" name="mezumota">
                {{#each motak}}
                     {{#if aukeratua}}
                         <option value="{{balioa}}" selected>{{mota}}</option>
                     {{else}}
                         <option value="{{balioa}}">{{mota}}</option>
                     {{/if}}
                {{/each}}
        </select>

        <label>
            <strong>&nbsp&nbsp&nbsp Bidali? &nbsp   </strong>
            <input type="checkbox" name="bidali" id="bidali" value="true" checked> 
        </label>
         
        <button type="submit" class="btn btn-default">Bidali</button>

        <label>
          <strong> ADI : {{nondik}} </strong>
        </label> 
  </form>
  </div>  

</br>
</br>
</br>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){        

   $("#reset1").on('click',function (){ 
        myFunction(); 
   });
  });
            

function myFunction() {
    var x;
    if (confirm("Seguru al zaude multzoak desegin nahi dituzula?") == true) {
        location.href = "/admin/multzoakreset";
    } else {
        x = "You pressed Cancel!";
    }
    document.getElementById("demo").innerHTML = x;
}
</script>

{{/section}}
