<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/txapelketaksortu" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="txapelketaizena" class="col-sm-2 control-label">Txapelketaren izena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="txapelketaizena" autofocus name="txapelketaizena" value={{txapelketaizena}}>
            </div>
        </div>
        
        <div class="form-group">
            <label for="taldeizena" class="col-sm-2 control-label">Administratzailearen izena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="taldeizena" name="taldeizena" value={{taldeizena}}>
            </div>
        </div>
        <div class="form-group">
            <label for="emailard" class="col-sm-2 control-label">Emaila</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="emailard" name="emailard" value={{emailard}}>
