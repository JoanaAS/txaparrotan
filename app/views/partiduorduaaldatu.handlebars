{{> menuadmin}}
<div class="jumbotron">
        <h2>Partidu ordua aldatu</h2>
      </div>
<div class="col-lg-12">
{{#each data}}
<h2 style="color:#0000FF"> {{izenafinala1}}-{{izenafinala2}}</h2>


<div class="formContainer col-sm-offset-1">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/partiduorduaaldatu/{{idpartidu}}" method="POST">
    
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        
        <div class="form-group">
            <label for="pareguna" class="col-sm-2 control-label">Partidu eguna</label>
            <div class="col-sm-4">

                <textarea name="pareguna" rows="1" cols="10" class="form-control">{{pareguna}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="parordua" class="col-sm-2 control-label">Partidu ordua</label>
            <div class="col-sm-4">
                <input type="time" class="form-control" required id="parordua" name="parordua" value={{parordua}}>
            </div>
        </div>

        <div class="form-group">
            <label for="zelaia" class="col-sm-2 control-label">Zelaia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="zelaia" name="zelaia" value={{zelaia}}>
            </div>
        </div>

        <div class="form-group">
            <label for="izenafinala1" class="col-sm-2 control-label">Izena 1</label>
            <div class="col-sm-4">
                <textarea name="izenafinala1" rows="1" cols="40" class="form-control">{{izenafinala1}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="izenafinala2" class="col-sm-2 control-label">Izena 2</label>
            <div class="col-sm-4">
                <textarea name="izenafinala2" rows="1" cols="40" class="form-control">{{izenafinala2}}</textarea>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Aldatu</button>
            </div>
        </div>
        

    </form>
</div>

<div class="col-lg-1 col-md-offset-6">

<form class="form-horizontal" role="form"  onsubmit="return confirmarBorrado()" action="/admin/partiduaezabatu" method="POST">

  <input type="hidden" name="idpartidu" value="{{idpartidu}}"> 

  <button type="submit" class="btn btn-default" id="ezabatu">ADI - PARTIDUA EZABATU</button>
</form>
</div>
   
{{/each}}

</div>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){        

   $("#ezabat1").on('click',function (){ 
        myFunction(); 
   });
  });
            

function myFunction() {
    var x;
    if (confirm("Seguru al zaude partidua ezabatu nahi duzula?") == true) {
        location.href = "/admin/partiduak";
    } else {
        x = "You pressed Cancel!";
    }
    document.getElementById("demo").innerHTML = x;
}

function confirmarBorrado() {
            // La función confirm() muestra un cuadro de diálogo con un mensaje y dos botones: "Aceptar" y "Cancelar".
            // Devuelve true si el usuario hace clic en "Aceptar" y false si hace clic en "Cancelar".

        var confirmacion = confirm("¿Seguru al zaude partidua ezabatu nahi duzula?");

            // Si el usuario hace clic en "Cancelar", la función devuelve false, lo que evita que el formulario se envíe.

        return confirmacion;
}


</script>

{{/section}}