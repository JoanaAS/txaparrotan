{{> menu}}

<div class="jumbotron">
        <h2>Taldeko jokalariak</h2>
      </div>

     <div class="container">
  <a href="/taldeak" class="btn btn-primary btn-sm" role="button">Talde guztiak ikusi</a>

<div class="row marketing">

<h3 style="color:#0000FF"> Taldearen datuak</h3>
<div class="table-responsive">
        
          <table class="table table-striped">
            <tr>
                    <th>Taldearen izena</th>
                    <th>Kategoria</th>
                    <th>Herria</th>
                    <th>Arduradunaren izena</th>
                    <th>Emaila</th>
                    <th>Telefonoa</th>
                    <th> </th>
                    
                </tr>                               
            {{#each data2}}
                  <tr>
                    <td>{{taldeizena}}</td>
                    <td>{{mailaizena}}</td>
                    <td>{{herria}}</td>
                    <td>{{izenaard}}</td>
                    <td>{{emailard}}</td>
                    <td>{{telefonoard}}</td> 
                    {{#if aldaketabai}}
                    <td>
                      <a class="a-inside edit" href="../taldeaeditatu">Aldatu</a>
                    </td>       
                    {{/if}}    
                    
                </tr>
            {{/each}}
          </table>
        </div>

        <div class="col-lg-8">
          <div class="col-lg-2">
          <h3 style="color:#0000FF"> Jokalariak </h3>
          <form class="form-horizontal newsletterForm" role="form" action="/jokalariagehitu" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
          </div>
         <div class="form-group">
            <div class="col-sm-offset-3"> 
                <br/>
                <!--
                {{#if aldaketabai}}  
                  <button type="submit" class="btn btn-default">Banaka Gehitu</button>
                {{/if}}
                -->

            </div>
        </div>
        </form> 
            <table class="table table-striped">
            <tr>
                    <th>Izena</th>
                    <th>Emaila</th>
                    <th>Telefonoa</th>
                    <th>Kamiseta neurria</th>
                    <th></th>
                    <th></th>

                </tr>                               
            {{#each data}}
                  <tr>
                    <td>{{jokalariizena}}</td>
                    <td>{{emailaj}}</td>
                    <td>{{telefonoaj}}</td>
                    <td>{{kamisetaneurria}}</td>
                    {{#if aldaketabai}}  
                     <td>
                        <a class="a-inside edit" href="../jokalariakeditatu/{{idjokalari}}">Aldatu</a>
                     </td>
                     <td>
                        <a class="a-inside delete" href="../jokalariakezabatu/{{idjokalari}}">Ezabatu</a> 
                     </td>
                    {{/if}}
                </tr>
            {{/each}}
          </table>
        </div>

      </div>
</div>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/jokalariasortu" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        
        <h4 style="color:#0000FF"> Gogoratu, taldeko jokalari kopuruak 6 eta 8ren artean egon behar duela </h4>
        <h4 style="color:#0000FF"> 8 partaidetik gora izanez gero, txaparrotan@gmail.com -era mezu bat bidali mesedez! </h4>
        </br>
        <div class="form-group">
            <label for="jokalariizena" class="col-sm-2 control-label">Izen-abizenak</label>
            <div class="col-sm-4">
                <textarea name="jokalariizena" rows="1" cols="40" class="form-control" required>{{jokalariizena}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="emaila" class="col-sm-2 control-label">Emaila</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" id="emaila" placeholder="Mezuak jaso nahiz gero" name="emaila">
            </div>
        </div>
        <div class="form-group">
            <label for="telefonoa" class="col-sm-2 control-label">Telefonoa</label>
            <div class="col-sm-4">
                <input type="tel" class="form-control" id="telefonoa" placeholder="Hautazkoa" name="telefonoa">
            </div>
        </div>
        <div class="form-group">
            <label for="kamisetaneurria" class="col-sm-2 control-label">Kamisetaren neurria (derrigorrezkoa)</label>
            <div class="col-sm-4">
        <select id="kamisetaneurria" name="kamisetaneurria">
          <option value="9-10">9-10</option> <option value="11-12">11-12</option>
          <option value="S">S</option> <option value="M">M</option><option value="L">L</option><option value="XL">XL</option><option value="XXL">XXL</option>
        </select>
            </div>
        </div>
        <hr align="left" noshade="noshade" size="2" width="100%" />
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                {{#if aldaketabai}} 
                    <button type="submit" class="btn btn-default">Banaka Gorde</button>
                {{/if}}
            </div>
        </div>
    </form>
</div>