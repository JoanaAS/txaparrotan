{{> menu}}

      <div class="jumbotron">
        <h2>Taldearen datuak aldatu</h2>
      </div>


<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/taldeaaldatu" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="taldeizena" class="col-sm-2 control-label">Taldearen izena</label>
            <div class="col-sm-4">
                <textarea name="taldeizena" rows="1" cols="40" class="form-control" required>{{taldeizena}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="kategoria" class="col-sm-2 control-label">Kategoria</label>
            <div class="col-sm-4">
            <select name="kategoria" id="kategoria">
                {{#each mailak}}
                     {{#if aukeratua}}
                         <option value="{{idmaila}}" selected>{{mailaizena}}</option>
                     {{else}}
                         <option value="{{idmaila}}">{{mailaizena}}</option>
                     {{/if}}
                {{/each}}
            </select>
            </div>
        </div>

        <div class="form-group">
            <label for="sexua" class="col-sm-2 control-label">Mixtoa - X</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" id="sexua" name="sexua" value={{sexua}}>
            </div>
        </div>
        
        <p> ARDURADUNA </p>
        <div class="form-group">
            <label for="izenaard" class="col-sm-2 control-label">Izen-abizenak</label>
            <div class="col-sm-4">
                <textarea name="izenaard" rows="1" cols="40" class="form-control" required>{{izenaard}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="telefonoard" class="col-sm-2 control-label">Telefonoa</label>
            <div class="col-sm-4">
                <input type="tel" class="form-control" required id="telefonoard" name="telefonoard" pattern = "\d{9}" value={{telefonoard}}>
            </div>
        </div>
        <div class="form-group">
            <label for="emailard" class="col-sm-2 control-label">Emaila</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="emailard" name="emailard" placeholder="Sartu zure emaila" value={{emailard}} >
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Aldatu</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>

<script>

Handlebars.registerHelper('mailaBerdina',function(kategoria, idmaila){
  return kategoria  == idmaila;
});


</script>