{{> menu}}

      <div class="jumbotron">
        <h2>Taldearen datuak aldatu</h2>
      </div>


<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/taldeaaldatu" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="taldeizena" class="col-sm-2 control-label">Taldearen izena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="taldeizena" name="taldeizena" value={{taldeizena}}>
            </div>
        </div>
        <div class="form-group">
            <label for="kategoria" class="col-sm-2 control-label">Kategoria</label>
            <div class="col-sm-4">
        <select id="kategoria" name="kategoria">
          <option value="Benjaminak">Benjaminak (LH 3-4)</option> <option value="Alebinak">Alebinak (LH 5-6)</option>
          <option value="Infantilak">Infantilak (DBH 1-2)</option> <option value="Helduak">Helduak</option>
        </select>
            </div>
        </div>
        <div class="form-group">
            <label for="sexua" class="col-sm-2 control-label">Sexua</label>
            <div class="col-sm-4">
        <select id="sexua" name="sexua">
          <option value="Neska">Neska</option> <option value="Mutila">Mutilak</option>
          <option value="Mixtoa">Mixtoa</option> 
        </select>
            </div>
        </div>
        <div class="form-group">
            <label for="herria" class="col-sm-2 control-label">Herria</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="herria" name="herria" value={{herria}}>
            </div>
        </div>
        
        <p> ARDURADUNA </p>
        <div class="form-group">
            <label for="izenaard" class="col-sm-2 control-label">Izen-abizenak</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="izenaard" name="izenaard" value={{izenaard}}>
            </div>
        </div>
        <div class="form-group">
            <label for="telefonoard" class="col-sm-2 control-label">Telefonoa</label>
            <div class="col-sm-4">
                <input type="tel" class="form-control" required id="telefonoard" name="telefonoard" pattern = "\d{9}" value={{telefonoard}}>
            </div>
        </div>
        <div class="form-group">
            <label for="emailard" class="col-sm-2 control-label">Emaila</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="emailard" name="emailard" placeholder="Sartu zure emaila" value={{emailard}} >
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Aldatu</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>
