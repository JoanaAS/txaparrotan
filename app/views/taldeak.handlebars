  {{#if menuadmin}}  
    <div class="jumbotron">
        <h2>Apuntatutako taldeak</h2>
    </div>
      <a href="/admin/taldeakikusi" class="btn btn-primary btn-sm" role="button">Taldeak ikusi</a>
      <a href="/admin/taldekopurua" class="btn btn-primary btn-sm" role="button">Talde kopurua ikusi</a>
      <a href="/admin/taldeakbalidatugabe" class="btn btn-primary btn-sm" role="button">Itxaron Zerrenda</a>
<!--
      <a href="/admin/taldekopbalidatugabe" class="btn btn-primary btn-sm" role="button">Talde kop balidatu gabe</a>
-->      
      <a href="/admin/jokalarikopurua" class="btn btn-primary btn-sm" role="button">Jokalari kopurua ikusi</a>
      <a href="/admin/jokalariakikusi" class="btn btn-primary btn-sm" role="button">Jokalariak izenez ikusi</a>
  {{else}}
      <div class="jumbotron">
        <h2>Onartutako taldeak</h2>
    </div>
        <a href="/jokalariak" class="btn btn-primary btn-sm" role="button">Zure taldearen datuak ikusi</a>  
  {{/if}}

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/taldeakaukeratu" method="POST">

      <div class="row marketing">
        <div class="col-lg-5 col-sm-offset-1">
        {{#each data2}}
        <h2 style="color:#0000FF"> {{mailaizena}}</h2>
        <table class="table table-striped">
            <tr class="active">  
                    <th> </th>
                    <th>Taldearen izena</th>
                     <th>X</th>
                    <th>Herria</th>
                    {{#if admin}}
                        <th>Balidatuta</th>
                        <th>Arduraduna</th>
                        <th>telefonoa</th> 
                        <th>emaila</th>
                        <th>lehentasuna</th>
                        <th>aukeratzeko</th>
                    {{/if}}
                </tr>                               
            {{#each taldeak}}
                  <tr>
                    <td> {{postua}} </td>
                    <td>{{taldeizena}}</td>
                    <td>{{sexua}}</td>
                    <td>{{herria}}</td> 
                    {{#if admin}}
                       <td>{{balidatuta}}</td>
                       <td>{{izenaard}}</td>
                       <td>{{telefonoard}}</td> 
                       <td>{{emailard}}</td>
                       <td>{{lehentasuna}}</td>
                       <td class="checkbox">
                        {{#if ezaukeratua}}
                           <input type="checkbox" id="aukeratua" name="aukeratua[]" value="{{idtaldeak}}">
                        {{/if}}
                       </td> 
                    {{/if}}                   
                </tr>
            {{/each}}
          </table>
        {{/each}}
        </div>
      </div>
      {{#if menuadmin}}
         <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default" id="aukeratu">TALDEAK AUKERATU</button>
            </div>
        </div>
      {{/if}}  
    </form>
</div>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){   

    $("#aukeratu").on('click',function (){ 
        var r = confirm("Ziur al zaude Taldeak aukeratu nahi dituzula?");
        if (r == false) {
          $(location).attr('href', '/admin/taldeak/');
        } 
    });

  });
            
</script> 
{{/section}}    