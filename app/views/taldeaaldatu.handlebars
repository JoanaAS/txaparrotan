{{> menuadmin}}
<div class="jumbotron">
        <h2>Taldearen datuak aldatu</h2>
      </div>

<div class="col-lg-12">
{{#each data}}
<h2 style="color:#0000FF"> {{taldeizena}}</h2>
</br>

<div class="formContainer col-sm-offset-1">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/taldeaaldatu/{{idtaldeak}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">

        <div class="form-group">
            <label for="taldeizena" class="col-sm-2 control-label">Taldearen izena</label>
            <div class="col-sm-4">
                <textarea name="taldeizena" rows="1" cols="40" class="form-control">{{taldeizena}}</textarea>
            </div>
        </div>
        
        <div class="form-group">
            <label for="idgrupot" class="col-sm-2 control-label">Multzo zenbakia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="idgrupot" name="idgrupot" value={{idgrupot}}>
            </div>
        </div>

        <div class="form-group">
            <label for="balidatuta" class="col-sm-2 control-label">Balidatuta</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="balidatuta" name="balidatuta" value={{balidatuta}}>
            </div>
        </div>

        <div class="form-group">
            <label for="berezitasunak" class="col-sm-2 control-label">Berezitasunak</label>
            <div class="col-sm-4">
                <textarea name="berezitasunak" rows="1" cols="40" class="form-control">{{berezitasunak}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="lehentasuna" class="col-sm-2 control-label">Lehentasuna</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="lehentasuna" name="lehentasuna" value={{lehentasuna}}>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Aldatu</button>
            </div>
        </div>
        

    </form>
</div>
        

{{/each}}

</div>