        <div class="form-group">
            <label for="mailaizena" class="col-sm-2 control-label">Mailaren izena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="mailaizena" autofocus name="mailaizena">
            </div>
        </div>
        <div class="form-group">
            <label for="akronimoa" class="col-sm-2 control-label">Akronimoa</label>
